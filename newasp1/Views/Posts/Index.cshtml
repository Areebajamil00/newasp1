@model IEnumerable<newasp1.Models.Post>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        @*<th>
            @Html.DisplayNameFor(model => model.PostTitle)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.PostDescription)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <div class="form-check">
                    <input type="radio" name="flexRadioDefault" id="flexRadioDefault1"> @Html.DisplayFor(modelItem => item.upvote)  @Html.ActionLink("upvote", "upvote", new { id = item.Postid })
                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" checked>  @Html.DisplayFor(modelItem => item.downvote)
                    @Html.ActionLink("downvote", "downvote", new { id = item.Postid })

                </div>
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PostTitle)
                @Html.DisplayFor(modelItem => item.PostDescription) at  @Html.DisplayFor(modelItem => item.Date)
            </td>
        </tr>
        <tr>
            <td>
                <div class="row">
                    <div class="container">
                        <div class="row">
                            <div class="col-sm-12">
                                <h3 class="page-title">User Comment</h3>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-1">
                                <div class="thumbnail">

                                    <img class="img-responsive user-photo"
                                         src="https://ssl.gstatic.com/accounts/ui/avatar_2x.png" />
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="panel panel-default">
                                    <div class="panel-body">
                                        <textarea class="form-control"
                                                  cols="15"
                                                  id="commentInput"></textarea>
                                    </div>
                                    <div class="panel-heading comment-action">
                                        <div class="submit-comment">
                                            <a href="https://www.blogger.com/null" id="addNewCommentBtn">Submit</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                @Html.ActionLink("postcomment", "AddComment", new { id = item.Postid })
            </td>
            @*<td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.Postid }) |
                    @Html.ActionLink("Details", "Details", new { id=item.Postid }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.Postid })
                </td>*@
        
     </tr>

       }

</table>
